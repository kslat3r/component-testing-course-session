{
  "name": "component-testing-course-session",
  "version": "1.0.0",
  "description": "Component testing course session API",
  "main": "server/server.js",
  "scripts": {
    "start": "node .",
    "format": "semistandard --env mocha --fix",
    "setup-mocks": "node ./mock/mock-server/setup.js",
    "pretest": "npm run format && npm run setup-mocks",
    "test": "npm run test:coverage npm run test:unit && npm run test:component",
    "test:docker": "docker-compose -f yml/test.yml run --rm component-testing-course-session-api bash -c \"npm test\"",
    "test:coverage": "nyc",
    "test:unit": "mocha --exit './server/**/*.spec.js'",
    "test:component": "cross-env MOCHAWESOME_REPORTDIR=./test/reports MOCHAWESOME_REPORTFILENAME=mocha-report mocha --exit --timeout 100000 --reporter mochawesome './test/**/*.spec.js'"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "dependencies": {
    "compression": "1.6.2",
    "cors": "2.8.3",
    "dotenv": "^6.2.0",
    "helmet": "3.6.1",
    "loopback": "3.18.2",
    "loopback-boot": "2.27.1",
    "loopback-component-explorer": "4.2.0",
    "loopback-connector-rest": "2.1.0",
    "strong-error-handler": "2.1.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "cross-env": "^5.1.6",
    "eslint": "4.12.1",
    "eslint-config-semistandard": "12.0.0",
    "eslint-config-standard": "11.0.0-beta.0",
    "mocha": "5.0.0",
    "mochawesome": "3.0.2",
    "mockserver-client": "^5.5.1",
    "nyc": "10.2.0",
    "semistandard": "12.0.0",
    "sinon": "4.3.0",
    "supertest": "3.0.0"
  },
  "nyc": {
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "server/datasources/*.js",
      "server/**/*.spec.js",
      "server/server.js",
      "server/api.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "semistandard": {
    "ignore": [
      "test/reports"
    ]
  },
  "author": {
    "name": "Ed Kelly",
    "email": "ekelly@sapient.com"
  },
  "license": "UNLICENSED"
}
